<body header="nlheader" header-height="370px" footer="nlfooter" footer-height="15px" padding="0.5in 0.5in 0.5in 0.5in" size="A4">


<#if record.item?has_content>

<table class="itemtable" style="width: 100%;"><!-- start items --><#list record.item as item><#if item_index==0>
<thead >
	<tr >
	<th colspan="12" ><br/>Description</th>
    <th align="center" colspan="2"><br/>Quantity</th>
	<th align="right" colspan="2">Unit<br/>Price</th>
    <th align="right" colspan="3">Net<br/>Amount</th>
	<th align="right" colspan="3">Gross<br/>Amount</th>
	</tr>
</thead>
</#if>

  <tr>
	<td colspan="12" >${item.description}</td>
    <td align="center" colspan="2">${item.quantity}</td>
	<td align="right" colspan="2">${item.rate}</td>
    <td align="right" colspan="3">${item.amount}</td>
	<td align="right" colspan="3">${item.grossamt}</td>
	</tr>
	</#list><!-- end items --></table>
</#if>

<hr />
  <#if record.item?has_content>
	<table class="itemtable" style="width: 100%; margin-top: 10px;"><#list record.taxsummary as tax><#if tax_index==0><tr>
	<th align="left" >${tax.taxtype@label}</th>
	<th align="left" colspan="2" >${tax.taxcode@label}</th>
	<th align="left" >${tax.taxbasis@label}</th>
	<th align="left" >${tax.taxrate@label}</th>
	<th align="left" >${tax.taxamount@label}</th>
	<td colspan="3">&nbsp;</td>
	</tr>
	</#if>
	<tr>
	<td>${tax.taxtype}</td>
	<td colspan="2">${tax.taxcode}</td>
	<td>${tax.taxbasis}</td>
	<td>${tax.taxrate}</td>
	<td>${tax.taxamount}</td>
	<td colspan="3">&nbsp;</td>
	</tr>
	</#list>
</table>
</#if>
