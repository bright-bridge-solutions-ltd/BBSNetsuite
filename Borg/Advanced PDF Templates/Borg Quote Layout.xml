<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<head>
	
	<#assign font_futura_light =  "https://3976137-sb1.app.netsuite.com/core/media/media.nl?id=2954819&c=3976137_SB1&h=aa4274acf6b4fdf482e5&_xt=.ttf" />
	<#assign font_futura_medium = "https://3976137-sb1.app.netsuite.com/core/media/media.nl?id=2954820&c=3976137_SB1&h=3b6e00d14514b4ab7c46&_xt=.ttf" />	
	<link type="font" name="Futura" subtype="TrueType" src="${font_futura_light?html}" src-bold="${font_futura_medium?html}" />
    <macrolist>
        <macro id="nlheader">
            <table class="header" style="width: 100%;">
            	<tr>
					<td rowspan="3"><#if companyInformation.logoUrl?length != 0><img src="${companyInformation.logoUrl}" style="float: left; margin: 7px" /> </#if></td>
					<td>Telephone<br />+44(0)1362 695 006<br />Email<br />sales@borgandoverstrom.com<br /><br /><strong>borgandoverstrom.com</strong></td>
					<td>${companyInformation.companyName}<br /><span class="nameandaddress">${companyInformation.addressText}</span></td>
				</tr>
			</table>
        </macro>       
        <macro id="nlfooter">
            <table class="footer" style="width: 100%;">
            	<tr>
            		<td colspan="8"><span class="address"><strong>This quotation is valid for 30 (thirty) days commencing on the date of this document.</strong></span></td>
            		<td colspan="8">&nbsp;</td>
            	</tr>
            	<tr>
            		<td colspan="8">Following the expiry period of thirty days, and before the Agreement is accepted and signed by the client, prices are subject to change upon prior notification to the Client.</td>
            		<td colspan="8" align="right"><br/><br/><strong>Please note this is not a VAT invoice</strong></td>
            	</tr>
            </table>
		</macro> 
    </macrolist> 
    <style type="text/css">
        * {
  			font-family: Futura, Arial, sans-serif;
		}
        table {
            font-size: 9pt;
            table-layout: fixed;
        }
        th {
            font-weight: bold;
            font-size: 8pt;
            vertical-align: middle;
            padding: 5px 6px 3px;
            background-color: #e3e3e3;
            color: #333333;
        }
        td {
            padding: 4px 6px;
        }
		td p { align:left }
        b {
            font-weight: bold;
            color: #333333;
        }
        table.header td {
            padding: 0;
            font-size: 10pt;
        }
        table.footer td {
            padding: 0;
            font-size: 8pt;
        }
        table.itemtable th {
            padding-bottom: 10px;
            padding-top: 10px;
        }
        table.body td {
            padding-top: 2px;
        }
        table.total {
            page-break-inside: avoid;
        }
        tr.totalrow {
            background-color: #e3e3e3;
            line-height: 200%;
        }
        td.totalboxtop {
            font-size: 12pt;
            background-color: #e3e3e3;
        }
        td.addressheader {
            font-size: 8pt;
            padding-top: 6px;
            padding-bottom: 2px;
        }
        td.address {
            padding-top: 0;
        }
        td.totalboxmid {
            font-size: 28pt;
            padding-top: 20px;
            background-color: #e3e3e3;
        }
        td.totalboxbot {
            background-color: #e3e3e3;
            font-weight: bold;
        }
        span.title {
            font-size: 16pt;
            font-weight: bold;
        }
        span.address {
            font-size: 12pt;
        }
        span.itemname {
            font-weight: bold;
            line-height: 150%;
        }
        hr {
            width: 100%;
            color: #000000;
            background-color: #000000;
            height: 1px;
        }
        
</style>
</head>
<body header="nlheader" header-height="15%" footer="nlfooter" footer-height="40pt" padding="0.5in 0.5in 0.5in 0.5in" size="A4">
   
   	<!-- Horizontal Line -->
   	<hr/>
   	
   	<table style="width: 100%; margin-top: 10px; margin-bottom: 35px">
   		<tr>
   			<td><span class="title">${record@title}</span></td>
   		</tr>
   		<tr>
   			<td><span class="address">${record.tranid}</span></td>
   			<td><strong>Invoice to</strong><br/><span class="address">${record.billaddress}</span></td>
   			<td><strong>Date</strong><br/><span class="address">${record.trandate}</span><br/><br/><strong>Document Number</strong><br/><span class="address">${record.tranid}</span><br/><br/><strong>Client Order Number</strong><br/><span class="address">${record.memo}</span></td>
   		</tr>
	</table>

	<!-- Horizontal Line -->
   	<hr/>

	<#if record.item?has_content>
		<table style="width: 100%; margin-bottom: 20px;">
			<!-- start items --><#list record.item as item><#if item_index==0>
				<tr>
					<td align="center" colspan="4">&nbsp;</td>
					<td colspan="6"><strong>Reference</strong></td>
					<td colspan="6"><strong>Description</strong></td>
					<td align="left" colspan="3"><strong>Quantity</strong></td>
					<td align="left" colspan="4"><strong>Price</strong></td>
					<td align="left" colspan="4"><strong>Net Price</strong></td>
				</tr>
				<tr>
					<td colspan="4">&nbsp;</td>
					<td colspan="6">&nbsp;</td>
					<td colspan="6">&nbsp;</td>
					<td colspan="3">&nbsp;</td>
					<td colspan="4">&nbsp;</td>
					<td colspan="4">&nbsp;</td>
				</tr>
			</#if>
				<tr>
					<!-- check if we have an item image -->
					<#if item.custcol_bbs_item_image?length gt 0>
    					<td colspan="4" align="center"><img src="${item.custcol_bbs_item_image}" style="width: 50px; height: 50px;"/></td>
    				<#else>
      					<td colspan="4">&nbsp;</td>
   					</#if>
					<td colspan="6"><span class="address"><strong>${item.item}</strong></span></td>
					<td colspan="6"><span class="address">${item.description}</span></td>
					<td align="left" colspan="3"><span class="address">${item.quantity}</span></td>
					<td align="left" colspan="4"><span class="address">${item.rate}</span></td>
					<td align="left" colspan="4"><span class="address">${item.amount}</span></td>
				</tr>
			</#list><!-- end items -->
		</table>
	</#if>

<!-- Horizontal Line -->
<hr/>
	
	<table style="width: 100%;">
		<tr>
			<td colspan="3">Payment terms: 30 Days from date of Invoice</td>
		</tr>
		<tr>
			<td colspan="3">&nbsp;</td>
			<td align="left"><span class="address">${record.subtotal@label}</span></td>
			<td align="right"><span class="address">${record.subtotal}</span></td>
		</tr>
		<tr>
			<td colspan="3">&nbsp;</td>
			<td align="left"><span class="address">VAT at 20%</span></td>
			<td align="right"><span class="address">${record.taxtotal}</span></td>
		</tr>
		<tr>
			<td colspan="3">&nbsp;</td>
			<td align="left"><span class="address"><strong>${record.total@label}</strong></span></td>
			<td align="right"><span class="address"><strong>${record.total}</strong></span></td>
		</tr>
	</table>
	
<!-- Horizontal Line -->
<hr/>

</body>
</pdf>