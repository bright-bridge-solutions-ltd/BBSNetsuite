<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<head>
	<link name="NotoSans" type="font" subtype="truetype" src="${nsfont.NotoSans_Regular}" src-bold="${nsfont.NotoSans_Bold}" src-italic="${nsfont.NotoSans_Italic}" src-bolditalic="${nsfont.NotoSans_BoldItalic}" bytes="2" />
	<#assign font_futura_light =  "https://3976137.app.netsuite.com/core/media/media.nl?id=3399123&amp;c=3976137&amp;h=7917b62431a11b4980e7&_xt=.ttf" />
	<#assign font_futura_medium = "https://3976137.app.netsuite.com/core/media/media.nl?id=3399122&amp;c=3976137&amp;h=4d2d7c35c4770d83a7b6&_xt=.ttf" />
	<link type="font" name="Futura" subtype="TrueType" src="${font_futura_light?html}" src-bold="${font_futura_medium?html}" />
    <macrolist>
		<macro id="nlheader">
            <table class="header" style="table-layout:fixed; width:100%;">
            	<tr>
					<td style="width: 60%"><img src="https://3976137-sb1.app.netsuite.com/core/media/media.nl?id=1897&amp;c=3976137_SB1&amp;h=a06e41069e3014da9368" style="width:136px; height:63px;" /></td>
					<td style="width: 22%; font-size: 8px;" align="left">Telephone<br/>+44(0) 1362 695 006<br/>Email<br/>sales@borgandoverstrom.com<br/>&nbsp;<br/>&nbsp;<br/>&nbsp;<br/><b>borgandoverstrom.com</b></td>
					<td style="width: 18%; font-size: 8px;" align="left">Synergy House<br/>Fakenham Road<br/>Morton on the Hill<br/>NR9 5SP</td>
				</tr>
			</table>
          
            <table class="header" style="table-layout:fixed; width:100%; margin-top: 160px;">
            	<tr>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 27%; font-size: 10px;"><b>Invoice To</b></td>
					<td style="width: 12%; font-size: 10px;" align="left"><b>Date</b></td>
					<td style="width: 41%; font-size: 10px;" align="left">${record.trandate}</td>
				</tr>
				<tr style="margin-top: 5px;">
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 27%; font-size: 10px;">${salesorder.billaddress}</td>
					<td style="width: 12%; font-size: 10px;" align="left">&nbsp;</td>
					<td style="width: 41%; font-size: 10px;" align="left">${record.tranid}</td>
				</tr>
				<tr>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 27%; font-size: 10px;">&nbsp;</td>
					<td style="width: 12%; font-size: 10px;" align="left">&nbsp;</td>
					<td style="width: 41%; font-size: 10px;" align="left">&nbsp;</td>
				</tr>
				<tr>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 27%; font-size: 10px;">VAT No.:  ${record.entity.vatregnumber}</td>
					<td style="width: 12%; font-size: 10px;" align="left">&nbsp;</td>
					<td style="width: 41%; font-size: 10px;" align="left">&nbsp;</td>
				</tr>
			</table>
          
           	<table class="header" style="table-layout:fixed; width:100%; margin-top: 20px;">
            	<tr>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 40%; font-size: 16px; border-top: 1px solid #bfbfbf; padding-top: 5px;" colspan="2"><b>Commercial Invoice</b></td>
					<td style="width: 40%; font-size: 10px; border-top: 1px solid #bfbfbf; padding-top: 5px;" align="left"><b>Delivery Address</b></td>
				</tr>
				<tr>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 20%; font-size: 10px;" align="left">&nbsp;</td>
					<td style="width: 40%; font-size: 10px;" align="left" rowspan="6">${record.shipaddress}</td>
				</tr>
				<tr>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 20%; font-size: 10px;" align="left">Client Order Number</td>
					<td style="width: 20%; font-size: 10px;" align="left">${salesorder.otherrefnum}</td>
				</tr>
				<tr>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 20%; font-size: 10px; border-bottom: 1px solid #bfbfbf;" align="left">Client Account Ref.</td>
					<td style="width: 20%; font-size: 10px; border-bottom: 1px solid #bfbfbf; margin-right: 5px;" align="left">${salesorder.entity.entityid}</td>
				</tr>
				<tr style="margin-top: 5px;">
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 20%; font-size: 10px;" align="left">Invoice Date</td>
					<td style="width: 20%; font-size: 10px;" align="left">${record.trandate}</td>
				</tr>
				<tr>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 20%; font-size: 10px;" align="left">Our Reference</td>
					<td style="width: 20%; font-size: 10px;" align="left">${record.tranid}</td>
				</tr>
				<tr>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 20%; font-size: 10px;" align="left">SO Reference</td>
					<td style="width: 20%; font-size: 10px;" align="left">Sales Order #${salesorder.tranid}</td>
				</tr>

			</table>
        </macro>
      
        <macro id="nlfooter">
            <table class="header" style="table-layout:fixed; width:100%;">
            	<tr>
					<td style="width: 20%; font-size: 10px;">&nbsp;</td>
					<td style="width: 35%; font-size: 10px; border-top: 1px solid #bfbfbf; padding-top: 5px;">Country of Origin: United Kingdom</td>
					<td style="width: 45%; font-size: 10px; border-top: 1px solid #bfbfbf; padding-top: 5px;" align="left">Watercooler Dispansers for filtered water and related parts.</td>
				</tr>
          	</table>
        </macro>
    </macrolist>
  
    <style type="text/css">
      * {
			font-family: Futura, NotoSans, sans-serif;
		}
		table {
			font-size: 9pt;
			table-layout: fixed;
		}
        th {
            font-weight: bold;
            font-size: 8pt;
            vertical-align: middle;
            padding: 5px 6px 3px;
            background-color: #e3e3e3;
            color: #333333;
        }
        td {
            padding: 4px 6px;
        }
		td p { align:left }
        b {
            font-weight: bold;
            color: #333333;
        }
        table.header td {
            padding: 0;
            font-size: 10pt;
        }
        table.footer td {
            padding: 0;
            font-size: 8pt;
        }
        table.itemtable th {
            padding-bottom: 10px;
            padding-top: 10px;
        }
        table.body td {
            padding-top: 2px;
        }
        td.addressheader {
            font-size: 8pt;
            font-weight: bold;
            padding-top: 6px;
            padding-bottom: 2px;
        }
        td.address {
            padding-top: 0;
        }
        span.title {
            font-size: 28pt;
        }
        span.number {
            font-size: 16pt;
        }
        span.itemname {
            font-weight: bold;
            line-height: 150%;
        }
        div.returnform {
            width: 100%;
            /* To ensure minimal height of return form */
            height: 200pt;
            page-break-inside: avoid;
            page-break-after: avoid;
        }
        hr {
            border-top: 1px dashed #d3d3d3;
            width: 100%;
            color: #ffffff;
            background-color: #ffffff;
            height: 1px;
        }
</style>
</head>
<body header="nlheader" header-height="450px" footer="nlfooter" footer-height="100px" padding="0.5cm 0.5cm 0.5cm 0.5cm" size="A4">
  
<#if salesorder.item?has_content>

<table class="itemtable" style="width: 100%; margin-top: 10px;">
<thead>
	<tr>
	<th colspan="12">${salesorder.item[0].item@label}</th>
	<th colspan="3">${salesorder.item[0].options@label}</th>
	<th align="right" colspan="4">${salesorder.item[0].quantityordered@label}</th>
	<th align="right" colspan="4">${salesorder.item[0].quantityremaining@label}</th>
	<th align="right" colspan="4">${salesorder.item[0].quantity@label}</th>
	</tr>
</thead>
<#list salesorder.item as tranline><tr>
	<td colspan="12"><span class="itemname">${tranline.item}</span><br />${tranline.description}</td>
	<td colspan="3">${tranline.options}</td>
	<td align="right" colspan="4">${tranline.quantityordered}</td>
	<td align="right" colspan="4">${tranline.quantityremaining}</td>
	<td align="right" colspan="4">${tranline.quantity}</td>
	</tr>
	</#list></table>
</#if>
</body>
</pdf>