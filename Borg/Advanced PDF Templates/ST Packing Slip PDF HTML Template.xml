    .small-heading-value.email{
      text-transform:lowercase;
    }
      .itemtable {
        font-size: 8pt;
      }
      .itemtable tr {
        border: 1px solid #eef4f8;
        border-bottom: 0px;
      }
      .itemtable tr:last-of-type {
        border-bottom: 1px solid #eef4f8;
      }
      .qty .item-amount,
      .qty .qtys {
        display: block;
        float: right;
        text-align: right;
      }
      .footer,
      .footer th td,
      .footer th td span {
        font-size: 6pt;
      }
      .sub-footer {
        font-size: 5pt;
      }
      .footer td.barcode {
        text-align: right;
      }
      .tagline,
      .tagline b {
        color: #65cada;
        font-size: 18pt;
      }
      
</style>
</head>
