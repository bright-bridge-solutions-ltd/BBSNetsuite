<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<head>
	<link name="NotoSans" type="font" subtype="truetype" src="${nsfont.NotoSans_Regular}" src-bold="${nsfont.NotoSans_Bold}" src-italic="${nsfont.NotoSans_Italic}" src-bolditalic="${nsfont.NotoSans_BoldItalic}" bytes="2" />

  	<!--Settings-->
  	<#setting time_zone = "GMT">
    
    <!--Set the VAT number to its default value-->
    <#assign vatNumber = "GB407311196">

    <!--Use the VAT number from the location if it has one-->
    <#if record.location.custrecord_bbs_vat_number?length gt 0>
		<#assign vatNumber = record.location.custrecord_bbs_vat_number>
    </#if>

  	<!--Set the EORI to blank-->
  	<#assign eoriNumber = "">

    <!--Use the EORI from the location if it has one-->
    <#if eoriNumber == "" && record.location.custrecord_bbs_location_eori_number?length gt 0>
		<#assign eoriNumber = record.location.custrecord_bbs_location_eori_number>
    </#if>

    <!--If shipping to outside the UK use the EORI from the subsidiary record-->
    <#if eoriNumber == "" && record.shipcountry != "GB">
        <#assign eoriNumber = subsidiary.custrecord_bbs_eori_number>
    </#if>

    <!--If shipping to Northen Ireland use the NI EORI from the subsidiary record-->
    <#if eoriNumber == "" && record.shipzip?starts_with("BT")>
        <#assign eoriNumber = subsidiary.custrecord_bbs_ni_eori_number>
    </#if>

	<!--Set company billing address-->
    <#assign billAddress = record.billaddress>

   
    <macrolist>
		<macro id="nlheader">
			<table class="header" style="width: 100%;">
				<tr>
					<td align="left" colspan="2"><img src="${subsidiary.logo@url}" style="width: 300px; height: 39px;" /></td>
					<td align="left" style="font-size: 7pt; padding-left: 40px;"><b>${subsidiary.mainaddress_text}</b></td>
                  	<td align="left" style="font-size: 7pt; padding-left: 10px;"><b>T: +44 (0)208 676 9990<br/>E: sales.uk@oxtools.com<br/>W: www.oxtools.com<br/>Reg. No. 07697065<br/>VAT No. ${vatNumber}<#if eoriNumber != ""><br/>EORI: ${eoriNumber}</#if></b></td>
				</tr>
			</table>

			<table class="header" style="width: 100%; margin-top: 10px;">
				<tr>
					<td align="left"   colspan="3" style="font-size: 8pt; padding: 5px; background-color: #00adef; color: #ffffff;"><b>Customer Name &amp; Address</b></td>
					<td align="left"   colspan="3" style="font-size: 8pt; padding: 5px; background-color: #00adef; color: #ffffff; margin-left: 3px;"><b>Delivery Address</b></td>
					<td align="center" colspan="2" style="font-size: 8pt; background-color: #00adef; color: #ffffff; padding: 5px; margin-left: 3px;"><b>ACKNOWLEDGEMENT</b></td>
              	</tr>
				<tr>
					<td align="left" colspan="3" rowspan="5" style="font-size: 8pt; padding: 5px;">${billAddress}</td>
					<td align="left" colspan="3" rowspan="5" style="font-size: 8pt; padding: 5px;">${record.shipaddress}</td>
					<td align="left" colspan="2" style="font-size: 7pt;  padding: 5px; margin-left: 3px;"><table style="width: 100%;"><tr><td align="left" style="font-size: 7pt;"><b>Order Date:</b></td><td align="right" style="font-size: 7pt;">${record.trandate}</td></tr></table></td>
              	</tr>
				<tr>
					<td align="left" colspan="2" style="font-size: 7pt; padding: 5px; margin-left: 3px;"><table style="width: 100%;"><tr><td align="left" style="font-size: 7pt; "><b>Order No:</b></td><td align="right" style="font-size: 7pt;">${record.otherrefnum}</td></tr></table></td>
              	</tr>
				<tr>
					<td align="left" colspan="2" style="font-size: 7pt; padding: 5px; margin-left: 3px;"><table style="width: 100%;"><tr><td align="left" style="font-size: 7pt; "><b>Ordered By:</b></td><td align="right" style="font-size: 7pt;">${record.custbody_bbs_ordered_by?keep_after(" : ")}</td></tr></table></td>
              	</tr>
				<tr>
					<td align="left" colspan="2" style="font-size: 7pt; padding: 5px; margin-left: 3px;"><table style="width: 100%;"><tr><td align="left" style="font-size: 7pt; "><b>Payment Terms:</b></td><td align="right" style="font-size: 7pt;">${record.terms}</td></tr></table></td>
              	</tr>
				<tr>
					<td align="left" colspan="2" style="font-size: 7pt; padding: 5px; margin-left: 3px;"><table style="width: 100%;"><tr><td align="left" style="font-size: 7pt;"><b>OX Order No:</b></td><td align="right" style="font-size: 7pt;"><b>${record.tranid}</b></td></tr></table></td>
              	</tr>

              	<tr>
                  	<td align="left" colspan="8" style="font-size: 7pt; padding: 5px;">
                      	<#if record.entity.entityid?index_of(" : ") gt 0>
      						Cust ID: ${record.entity.entityid?keep_after(" : ")}
    					<#else>         
      						Cust ID: ${record.entity.entityid}
    					</#if>
                        <#if record.entity.vatregnumber?length gt 0>
      						&nbsp;VAT No: ${record.entity.vatregnumber}
    					</#if>
                        <#if record.entity.custentity_bbs_cust_eori_no?length gt 0>
      						&nbsp;EORI: ${record.entity.custentity_bbs_cust_eori_no}
    					</#if>
                    </td>
              	</tr>
			</table>
		</macro>
      
      	<macro id="nlfooter">
            <table class="footer" style="width: 100%;">
				<tr>
                  	<td align="right">${.now?string["dd/MM/yyyy, HH:mm:ss"]} Page <pagenumber/> of <totalpages/></td>
              	</tr>
			</table>
		</macro>
    </macrolist>
  
	<style type="text/css">table {
            font-family: sans-serif;
            font-size: 9pt;
            table-layout: fixed;
        }
        th {
            font-weight: bold;
            font-size: 8pt;
            vertical-align: left;
            padding: 5px 6px 3px;
            text-align: left;
            
        }
        td {
            padding: 4px 6px;
          
        }
        b {
            font-weight: bold;
        }
        table.header td {
            padding: 0px;
            font-size: 10pt;
        }
        table.footer td {
            padding: 0px;
            font-size: 8pt;
        }
        table.itemtable th {
            padding-bottom: 5px;
            padding-top: 5px;
        }
        table.body td {
            padding-top: 2px;
        }
        table.total {
            page-break-inside: avoid;
        }
        tr.totalrow {
            
            line-height: 200%;
        }
        td.totalboxtop {
            font-size: 12pt;
            background-color: #e3e3e3;
        }
      
      th.itemlist {
            background-color: #000000;            
            font-weight: bold;
            color: #FFFFFF;
      }
        td.addressheader {
            font-size: 8pt;
            padding-top: 6px;
            padding-bottom: 2px;
            background-color: #000000;            
            font-weight: bold;
            color: #FFFFFF;
        }
        td.address {
            padding-top: 0px;
          border: 1px solid black;
        }
        td.totalboxmid {
            font-size: 28pt;
            padding-top: 20px;
            background-color: #e3e3e3;
        }
        td.totalboxbot {
            background-color: #e3e3e3;
            font-weight: bold;
        }
      td.bodyinfo {
        text-align: left;
        border: 1px solid black;
      }
        span.title {
            font-size: 28pt;
        }
        span.number {
            font-size: 16pt;
        }
        span.itemname {
            font-weight: bold;
            line-height: 150%;
        }
        hr {
            width: 100%;
            color: #d3d3d3;
            background-color: #d3d3d3;
            height: 1px;
        }
</style>
</head>
  
<body header="nlheader" header-height="240px" footer="nlfooter" footer-height="5px" padding="0.5in 0.5in 0.5in 0.5in" size="A4">

<#if record.item?has_content>
  <table style="width: 100%;">
      <#list record.item as item>
        <#if item_index==0>
          <thead>
              <tr>
              <th align="right" colspan="1"  style="font-size: 7pt;  background-color: #00adef; color: #ffffff;" >Qty</th>
              <th align="left"  colspan="3"  style="font-size: 7pt;  background-color: #00adef; color: #ffffff;" >Code</th>
              <th align="left"  colspan="10" style="font-size: 7pt;  background-color: #00adef; color: #ffffff;" >Description</th>
              <th align="right" colspan="2"  style="font-size: 7pt;  background-color: #00adef; color: #ffffff;" >Price Each</th>
              <th align="right" colspan="2"  style="font-size: 7pt;  background-color: #00adef; color: #ffffff;" >Line Total</th>
              <th align="right" colspan="2"  style="font-size: 7pt;  background-color: #00adef; color: #ffffff;" >Line VAT</th>
              </tr>
          </thead>
        </#if>

        <tr>
          <td align="right" colspan="1"  style="font-size: 7pt;" >${item.quantity}</td>
          <td align="left"  colspan="3"  style="font-size: 7pt;" >${item.item}</td>
          <td align="left"  colspan="10" style="font-size: 7pt;" >${item.description}</td>
          <td align="right" colspan="2"  style="font-size: 7pt;" >${item.rate}</td>
          <td align="right" colspan="2"  style="font-size: 7pt;" >${item.amount}</td>
          <td align="right" colspan="2"  style="font-size: 7pt;" >${item.tax1amt}</td>
        </tr>
        <#if record.shipcomplete || item.quantitycommitted?number gt 0>
          <tr>
            <td align="right" colspan="4"  style="font-size: 7pt;" >&nbsp;</td>
            <td align="left"  colspan="10" style="font-size: 7pt; color: #A9A9A9">Scheduled Despatch Date: ${record.shipdate?string.short}</td>
            <td align="right" colspan="6"  style="font-size: 7pt;" >&nbsp;</td>
          </tr>
        </#if>
      </#list>
  </table>
</#if>

	<div style="page-break-inside: avoid;">
      <table style="width: 100%; margin-top: 10px;">
          <tr>
              <#if record.message?length gt 0>
              	<td colspan="14" align="left"  style="font-size: 7pt; border-top: 1px solid black;"><b>Special Instructions</b></td>
              <#else>
                <td colspan="14" align="left"  style="font-size: 7pt; border-top: 1px solid black;">&nbsp;</td>
              </#if>
              <td colspan="1"  align="left"  style="font-size: 7pt; border-top: 1px solid black;">&nbsp;</td>
              <td colspan="3"  align="left"  style="font-size: 7pt; border-top: 1px solid black;"><b>Goods Net:</b></td>
              <td colspan="2"  align="right" style="font-size: 7pt; border-top: 1px solid black;">${record.subtotal}</td>
          </tr>
          <tr>
              <#if record.message?length gt 0>
              	<td rowspan="6" colspan="14" align="left"  style="font-size: 7pt; ">${record.message}</td>
              <#else>
                <td rowspan="6" colspan="14" align="left"  style="font-size: 7pt;">&nbsp;</td>
              </#if>
              <td colspan="1"  align="left"  style="font-size: 7pt;">&nbsp;</td>
              <td colspan="3"  align="left"  style="font-size: 7pt; "><b>Delivery:</b><br/>(${record.shipmethod})</td>
              <td colspan="2"  align="right" style="font-size: 7pt; ">${record.shippingcost}</td>
          </tr>
          <tr>
              <td colspan="1"  align="left"  style="font-size: 7pt;">&nbsp;</td>
              <td colspan="3"  align="left"  style="font-size: 7pt; "><b>VAT:</b></td>
              <td colspan="2"  align="right" style="font-size: 7pt; ">${record.taxtotal}</td>
          </tr>
          <tr>
              <td colspan="1"  align="left"  style="font-size: 7pt;">&nbsp;</td>
              <td colspan="3"  align="left"  style="font-size: 7pt; "><b>Total:</b></td>
              <td colspan="2"  align="right" style="font-size: 7pt; ">${record.total}</td>
          </tr>
          <tr>
              <td colspan="1"  align="left"  style="font-size: 7pt;">&nbsp;</td>
              <td colspan="3"  align="left"  style="font-size: 7pt; ">&nbsp;</td>
              <td colspan="2"  align="right" style="font-size: 7pt; ">&nbsp;</td>
          </tr>


      </table>
  
      <table  style="width: 100%; margin-top: 5px; ">
        <tr>
          <td align="center" style="font-size: 7pt; padding: 0px 0px 0px 0px;"><b>Thank you for your order</b></td>
        </tr>
        <tr>
          <td align="center" style="font-size: 7pt; padding: 0px 0px 0px 0px;"><b>Please note product codes, pricing and delivery charges and make any necessary changes to your purchase order and records.</b></td>
        </tr>
      </table>

      <table  style="width: 100%; margin-top: 5px; ">
        <tr>
          <td align="center" style="font-size: 7pt; padding: 0px 0px 0px 0px;"><b>Our fully trained distribution team are preparing your order for despatch in accordance with the above.</b></td>
        </tr>
        <tr>
          <td align="center" style="font-size: 7pt; padding: 0px 0px 0px 0px;"><b>If there are any discrepancies please email sales.uk@oxtools.com within 72 hours of receipt of goods</b></td>
        </tr>
        <tr>
          <td align="center" style="font-size: 7pt; padding: 0px 0px 0px 0px;"><b>&nbsp;</b></td>
        </tr>
      </table>
    </div>
</body>
</pdf>