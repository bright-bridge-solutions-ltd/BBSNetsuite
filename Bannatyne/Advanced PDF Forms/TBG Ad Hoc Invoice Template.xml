<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<head>
	<link name="NotoSans" type="font" subtype="truetype" src="${nsfont.NotoSans_Regular}" src-bold="${nsfont.NotoSans_Bold}" src-italic="${nsfont.NotoSans_Italic}" src-bolditalic="${nsfont.NotoSans_BoldItalic}" bytes="2" />
	<#if .locale == "zh_CN">
		<link name="NotoSansCJKsc" type="font" subtype="opentype" src="${nsfont.NotoSansCJKsc_Regular}" src-bold="${nsfont.NotoSansCJKsc_Bold}" bytes="2" />
	<#elseif .locale == "zh_TW">
		<link name="NotoSansCJKtc" type="font" subtype="opentype" src="${nsfont.NotoSansCJKtc_Regular}" src-bold="${nsfont.NotoSansCJKtc_Bold}" bytes="2" />
	<#elseif .locale == "ja_JP">
		<link name="NotoSansCJKjp" type="font" subtype="opentype" src="${nsfont.NotoSansCJKjp_Regular}" src-bold="${nsfont.NotoSansCJKjp_Bold}" bytes="2" />
	<#elseif .locale == "ko_KR">
		<link name="NotoSansCJKkr" type="font" subtype="opentype" src="${nsfont.NotoSansCJKkr_Regular}" src-bold="${nsfont.NotoSansCJKkr_Bold}" bytes="2" />
	<#elseif .locale == "th_TH">
		<link name="NotoSansThai" type="font" subtype="opentype" src="${nsfont.NotoSansThai_Regular}" src-bold="${nsfont.NotoSansThai_Bold}" bytes="2" />
	</#if>
    <macrolist>
        <macro id="nlheader">
            <table class="header" style="width: 100%;"><tr>
	<td>&nbsp;</td>
	<td align="right">&nbsp;</td>
	<td align="right">&nbsp;</td>
	<td align="right" rowspan="8"><#if companyInformation.logoUrl?length != 0><img src="${companyInformation.logoUrl}" style="float: right; width:160px; height:40px;" /> </#if></td>
	</tr>

	<tr>
	<td><span style="font-size:18px; color:red; font-weight: bold;">INVOICE</span></td>
	<td align="right">&nbsp;</td>
	</tr>
	
	<tr>
	<td rowspan="6"><span style="font-size:10px;">${record.custbody_subsidiary_address}</span></td>
	<td align="right">&nbsp;</td>
	<td align="right">&nbsp;</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	</tr>
	
	<tr>
	<td align="left">&nbsp;</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	</tr></table>

<table style="width: 100%; margin-top: 10px;"><tr>
	<td align="left" colspan="2" style="font-size:10px; background-color:#5b5c61; color:#ffffff; border-bottom: 2px solid white; padding: 5px;">Invoice To</td>
	<td align="left">&nbsp;</td>
	<td align="left" style="font-size:10px; background-color:#5b5c61; color:#ffffff; border-bottom: 2px solid white; border-right: 2px solid white; padding: 5px;">INVOICE NO:</td>
	<td align="left" style="font-size:10px; background-color:#ffffff; color:#000000; border-bottom: 2px solid white; padding: 5px;">${record.tranid}</td>
	</tr>
	<tr>
	<td align="left" colspan="2" rowspan="5" style="font-size:10px; background-color:#ffffff; color:#000000; padding: 5px;">${record.billaddress}</td>
	<td align="left">&nbsp;</td>
	<td align="left" rowspan="1" style="font-size:10px; background-color:#5b5c61; color:#ffffff; border-bottom: 2px solid white; border-right: 2px solid white; padding: 5px;">Invoice/Tax Date:</td>
	<td align="left" rowspan="1" style="font-size:10px; background-color:#ffffff; color:#000000; border-bottom: 2px solid white; padding: 5px;">${record.trandate}</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	<td align="left" style="font-size:10px; background-color:#5b5c61; color:#ffffff; border-bottom: 2px solid white; border-right: 2px solid white; padding: 5px;">Account No:</td>
	<td align="left" style="font-size:10px; background-color:#ffffff; color:#000000; border-bottom: 2px solid white; padding: 5px;">${record.entity.entityid}</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	<td align="left">&nbsp;</td>
	<td align="left">&nbsp;</td>
	</tr></table>
        </macro>
        <macro id="nlfooter">
            <table class="footer" style="width: 100%;">
	            <tr>
					<td align="center" style="font-size: 6pt">REGISTERED OFFICE: Power House, Haugton Road, Darlington, DL1 1ST. VAT REGISTRATION NUMBER 302318452 COMPANY REGISTRATION NUMBER 3287770</td>
				</tr>
				<tr>
					<td align="right"><pagenumber/> of <totalpages/></td>
				</tr>
			</table>
        </macro>
    </macrolist>
    <style type="text/css">table {
            font-family: helvetica;
            font-size: 9pt;
            table-layout: fixed;
        }
        th {
            font-weight: bold;
            font-size: 8pt;
            padding: 0px;
            background-color: #e3e3e3;
            color: #333333;
        }
        td {
            padding: 0px;
            vertical-align: middle;
            font-size:12px;
        }
        b {
            font-weight: bold;
            color: #333333;
        }
        table.header td {
            padding: 0px;
            font-size: 10pt;
        }
        table.footer td {
            padding: 0;
            font-size: 8pt;
        }
        table.itemtable th {
            padding-bottom: 0px;
            padding-top: 0px;
        }
        table.itemtable td {
          font-size: 9pt;
        }
        table.body td {
            padding-top: 0px;
        }
        table.total {
            page-break-inside: avoid;
        }
      table.message{
        border: 1px solid #dddddd;
      }
        tr.totalrow {
            background-color: #e3e3e3;
            line-height: 125%;
        }
      tr.messagerow{
        font-size: 6pt;
      }
        td.totalboxtop {
            font-size: 12pt;
            background-color: #e3e3e3;
        }
        td.addressheader {
            font-size: 12pt;
            padding-top: 0px;
            padding-bottom: 0px;
        }
        td.address {
            padding-top: 0;
        }
        td.totalboxmid {
            font-size: 28pt;
            padding-top: 20px;
            background-color: #e3e3e3;
        }
      td.message{
        font-size: 6pt;
        font-weight: bold;
      }
        td.totalboxbot {
            background-color: #e3e3e3;
            font-weight: bold;
        }
      td.itemtable {
      white-space: pre;
      }
        span.title {
            font-size: 28pt;
        }
        span.number {
            font-size: 16pt;
        }
        span.itemname {
            font-weight: bold;
            line-height: 150%;
        }
        hr {
            width: 100%;
            color: #d3d3d3;
            background-color: #d3d3d3;
            height: 1px;
        }
</style>
</head>
<body header="nlheader" header-height="290px" footer="nlfooter" footer-height="10px" padding="1cm 1cm 1cm 1cm" size="A4">
    <#if record.item?has_content>
<table class="itemtable" style="width: 100%;"><!-- start items --><#list record.item as item><#if item_index==0>
<thead>
	<tr>
    <th align="center" colspan="5" style="font-size:px; background-color:#5b5c61; color:#ffffff; border-right: 2px solid white; padding: 5px;">Location</th>
	<th align="left" colspan="15" style="font-size:8px; background-color:#5b5c61; color:#ffffff; border-right: 2px solid white; padding: 5px;">${item.item@label}</th>
	<th align="right" colspan="4" style="font-size:8px; background-color:#5b5c61; color:#ffffff;  padding: 5px;">${item.amount@label}</th>
	</tr>
</thead>
	</#if>
	<tr>
    <td align="center" colspan="5" line-height="150%" style="font-size:10px; background-color:#ffffff; color:#000000; border-right: 2px solid white; padding: 5px;">${item.location}</td>
	<td colspan="15" style="font-size:10px; background-color:#ffffff; color:#000000; border-right: 2px solid white; padding: 5px;"><b>${record.custbody_bbs_ad_hoc_inv_desc}</b><br />${item.description}</td>
	<td align="right" colspan="4" style="font-size:10px; background-color:#ffffff; color:#000000; padding: 5px;">${item.amount}</td>
	</tr>
	</#list><!-- end items --></table>
</#if>

<hr />
<table style="width: 100%;"><tr><!--<td align="left" colspan="2" style="font-size:10px; background-color:#5b5c61; color:#ffffff; border-bottom: 2px solid white; padding: 5px;">Deliver To/Notes:</td>-->
	<td align="left" colspan="2" rowspan="2" style="padding: 5px; font-size: 9px;">&nbsp;</td>
	<td align="left" rowspan="2">&nbsp;</td>
	<td align="left" style="font-size: 10px; background-color:#5b5c61; color:#ffffff; border-bottom: 2px solid white; padding: 5px;">TOTAL GOODS:</td>
	<td align="right" style="font-size: 10px; background-color:#ffffff; color:#000000; border-bottom: 2px solid white; padding: 5px;">${record.subtotal}</td>
	</tr>
	<tr><!--<td align="left" colspan="2" rowspan="5" style="font-size:10px; background-color:#d6d6d7; color:#000000; padding: 5px;">${record.shipaddress}</td>-->
	<td align="left" rowspan="1" style="font-size:10px; background-color:#5b5c61; color:#ffffff; border-bottom: 2px solid white; padding: 5px;">TOTAL VAT:</td>
	<td align="right" rowspan="1" style="font-size:10px; background-color:#ffffff; color:#000000; border-bottom: 2px solid white; padding: 5px;">${record.taxtotal}</td>
	</tr>
	<tr>
	<td align="left" colspan="2" rowspan="3" style="padding: 5px; font-size: 9px; color: red;">&nbsp;</td>
	<td align="left">&nbsp;</td>
	<td align="left" style="font-size:10px; background-color:#5b5c61; color:#ffffff; border-bottom: 2px solid white; padding: 5px;">AMOUNT DUE:</td>
	<td align="right" style="font-size:10px; background-color:#ffffff; color:#000000; border-bottom: 2px solid white; padding: 5px;">${record.total}</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	</tr>
	<tr>
	<td align="left">&nbsp;</td>
	</tr></table>
	
	<table style="width: 100%;">
    	<!-- If the invoice type is Ongoing -->
	    <#if record.custbody_bbs_ad_hoc_invoice_type == 'Ongoing'>
	    	<tr>
		    	<td style="padding: 5px; font-size: 12px; color: black;">Payment will be collected by Direct Debit on or around the 5th ${record.trandate?string("MMMM")}</td>
		    </tr>
		<#else>
	    	<tr>
	    		<td style="padding: 5px; font-size: 12px; color: black;">Please arrange for this invoice to be paid to the account below before you start on site.</td>
	    	</tr>
	    	<tr>
	    		<td style="padding: 5px; font-size: 12px; color: black;">Bank Name: ${record.subsidiary.custrecord_bbs_bank_account_name}<br/>Account No: ${record.subsidiary.custrecord_bbs_bank_account_number}<br/>Sort Code: ${record.subsidiary.custrecord_bbs_bank_account_sort}</td>
	    	</tr>
	    </#if>
	</table>
</body>
</pdf>