<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<head>
	<link name="NotoSans" type="font" subtype="truetype" src="${nsfont.NotoSans_Regular}" src-bold="${nsfont.NotoSans_Bold}" src-italic="${nsfont.NotoSans_Italic}" src-bolditalic="${nsfont.NotoSans_BoldItalic}" bytes="2" />

    <macrolist>
        <macro id="nlheader">

            <table class="header" style="width: 100%;">
				<tr>
					<td align="left" style="padding-bottom: 10px;">Order #<br/>${record.tranid}</td>
                  	<td align="left" style="padding-bottom: 10px;" colspan="2"><barcode codetype="code128" showtext="false" value="${record.tranid}"/></td>
                  	<td align="left" colspan="2" style="vertical-align: middle; padding-bottom: 10px">Ship Date: ${record.shipdate?string["dd MMM yyyy"]}<br/><br/>Shipping Charge: ${record.shippingcost}</td>
                  	<td align="right" style="font-size:14pt; font-weight: bold; padding-bottom: 10px">${record.shipdate?string["E"]}</td>
				</tr>
              	<tr>
					<td align="left" style="padding-bottom: 10px;">Ship Method<br/>${record.shipmethod}</td>
                  	<td align="left" style="padding-bottom: 10px;" colspan="2">&nbsp;</td>
                  	<td align="left" colspan="2" style="vertical-align: middle; padding-bottom: 10px;">Order Taken By<br/>${record.custbody_bbs_createdby}</td>
                  	<td align="right" style="font-size:14pt; font-weight: bold; padding-bottom: 10px;">&nbsp;</td>
				</tr>
				<tr>
					<td align="left" style="padding-bottom: 10px;">&nbsp;</td>
                  	<td align="left" style="padding-bottom: 10px;" colspan="2">&nbsp;</td>
                  	<td align="left" colspan="2" style="vertical-align: middle; padding-bottom: 10px;">Order Date/Time<br/>${record.custbody_bbs_datecreated}</td>
                  	<td align="right" style="font-size:14pt; font-weight: bold; padding-bottom: 10px;">&nbsp;</td>
				</tr>
         	</table>

           	<table style="width: 100%; margin-top: 10px;">
            	<tr>
                  	<td rowspan="3" style="border: 1px solid black;"><b>CUSTOMER DOCUMENT NOTES</b><br/><br/>${record.custbody_bbs_cust_sales_notes}</td>
					<td class="addressheader"><b>Customer</b></td>
				</tr>
				<tr>
					<td class="address">${record.entity}</td>
				</tr>
              	<tr>
					<td class="address">${record.shipaddress}</td>
				</tr>
				<tr>
                  	<td rowspan="5" style="margin-top: 10px; border: 1px solid black;"><b>DELIVERY INSTRUCTIONS</b><br/><br/>${record.custbody_bbs_so_delivery_instructions}</td>
				</tr>
          	</table>

        </macro>

        <macro id="nlfooter">
            <table class="total" style="width: 100%; page-break-inside: avoid;">
            	<tr class="totalrow">
                	<td class="totalcell" align="left" style="padding-left: 5px;"><b>Picked By:</b></td>
                  	<td class="totalcell" align="left" style="padding-left: 5px;"><b>Packed By:</b></td>
            	</tr>
          	</table>
        </macro>
    </macrolist>

    <style type="text/css">* {
			font-family: NotoSans, sans-serif;
		}
		table {
			font-size: 9pt;
			table-layout: fixed;
		}
		th {
			font-weight: bold;
			font-size: 8pt;
			vertical-align: middle;
            padding: 5px 6px 3px;
            background-color: #e3e3e3;
			color: #333333;
		}
		td {
            padding: 4px 6px;
        }
		td p { align:left }
		b {
			font-weight: bold;
			color: #333333;
		}
		table.header td {
			padding: 0;
			font-size: 10pt;
		}
		table.footer td {
			padding: 0;
			font-size: 8pt;
		}
		table.itemtable th {
			padding-bottom: 10px;
			padding-top: 10px;
		}
      	table.total {
          page-break-inside: avoid;
        }
		table.body td {
			padding-top: 2px;
		}
		td.addressheader {
			font-size: 8pt;
			padding-top: 6px;
			padding-bottom: 2px;
		}
		td.address {
			padding-top: 0;
		}
      	td.totalcell {
          border: 1px solid black;
          border-collapse: collapse;
        }
      	tr.totalrow {
          line-height: 300%;
        }
		span.title {
			font-size: 28pt;
		}
		span.number {
			font-size: 16pt;
		}
		span.itemname {
			font-weight: bold;
			line-height: 150%;
		}
		hr {
			width: 100%;
			color: #d3d3d3;
			background-color: #d3d3d3;
			height: 1px;
		}
</style>
</head>

<body header="nlheader" header-height="250pt" footer="nlfooter" footer-height="20pt" padding="0.5in 0.5in 0.5in 0.5in" size="A4">

<#if record.item?has_content>

<table class="itemtable" style="width: 100%; margin-top: 10px;"><!-- start items--><#list record.item as item><#if item_index==0>
<thead>
	<tr>
	<th>${item.custcol_bbs_item_bin@label}</th>
    <th colspan="4">${item.item@label}</th>
	<th>${item.options@label}</th>
	<th>${item.quantity@label}</th>
	<th>${item.units@label}</th>
	<th colspan="2">${item.quantitycommitted@label}</th>
    <th>${item.custcol_bbs_item_bin@label}</th>
	</tr>
</thead>
</#if>
  <tr>
	<td>${item.custcol_bbs_item_bin}</td>
  	<td colspan="4"><span class="itemname">${item.custcol_bbs_sku}</span>&nbsp;${item.description}</td>
	<td>${item.options}</td>
	<td>${item.quantity}</td>
	<td>${item.units}</td>
	<td colspan="2">${item.quantitycommitted}</td>
    
    <td>${item.custcol_bbs_item_bin}</td>
  </tr>
      <#if item.custcol_bbs_item_serialornot?has_content>
      	<tr>
      		<td>&nbsp;</td>
      		<td colspan="10" height="150%"><b>Serial No(s).</b></td>
      	</tr>
       </#if>

    
	</#list><!-- end items </table>
</#if>

  

</body>
</pdf>