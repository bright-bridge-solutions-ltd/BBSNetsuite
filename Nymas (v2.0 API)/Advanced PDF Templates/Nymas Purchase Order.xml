<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<head>
	<link name="Arial" type="font" subtype="truetype" src="${nsfont.Arial_Regular}" src-bold="${nsfont.Arial_Bold}" src-italic="${nsfont.Arial_Italic}" src-bolditalic="${nsfont.Arial_BoldItalic}" bytes="2" />
	<macrolist>
    	<macro id="nlheader">
      		<table style="width: 100%; font-size: 10pt;">
      			<tr>
      				<td colspan="4"><span style="font-size: 16pt; font-weight: bold;">PURCHASE ORDER</span></td>
      				<td colspan="4" rowspan="5"><p align="center"><img src="${record.cseg_bbs_brand.custrecord_bbs_brand_logo@url}" style="float: center; width:100px; height:50px;"/><br/><br/>${record.cseg_bbs_brand.custrecord_bbs_brand_legal_name}<br/>${record.cseg_bbs_brand.custrecord_bbs_brand_address_1}<br/>${record.cseg_bbs_brand.custrecord_bbs_brand_address_2}, ${record.cseg_bbs_brand.custrecord_bbs_brand_address_3}<br/>${record.cseg_bbs_brand.custrecord_bbs_brand_city}, ${record.cseg_bbs_brand.custrecord_bbs_brand_county}, ${record.cseg_bbs_brand.custrecord_bbs_brand_postcode}<br/>Tel: ${record.cseg_bbs_brand.custrecord_bbs_brand_phone}<#if record.cseg_bbs_brand.custrecord_bbs_brand_fax_number?has_content> Fax: ${record.cseg_bbs_brand.custrecord_bbs_brand_fax_number}</#if><br/>Email: ${record.cseg_bbs_brand.custrecord_bbs_brand_purchasing_email}<br/>${record.cseg_bbs_brand.custrecord_bbs_brand_website}</p></td>
      			</tr>
      			<tr>
      				<td colspan="2" style="border-left: 1px solid black; border-top: 1px solid black;"><b>Order Date</b></td>
      				<td colspan="2" style="border-right: 1px solid black; border-top: 1px solid black;"><b>: ${record.trandate}</b></td>
      			</tr>
      			<tr>
      				<td colspan="2" style="border-left: 1px solid black;"><b>Our Reference</b></td>
      				<td colspan="2" style="border-right: 1px solid black;"><b>: ${record.tranid}</b></td>
      			</tr>
      			<tr>
      				<td colspan="2" style="border-left: 1px solid black;"><b>Your Reference</b></td>
      				<td colspan="2" style="border-right: 1px solid black;"><b>: ${record.otherrefnum}</b></td>
      			</tr>
      			<tr>
      				<td colspan="2" style="border-left: 1px solid black; border-bottom: 1px solid black;"><b>Issue Number</b></td>
      				<td colspan="2" style="border-right: 1px solid black; border-bottom: 1px solid black;"><b>: </b></td>
      			</tr>
      		</table>
        </macro>
        <macro id="nlfooter">
        	<table style="width: 100%">
	           	<tr>
	           		<td align="center" colspan="12"><span style="font-size: 6pt; font-weight: bold; color: #FF0000;">This purchase order is placed with you subject to your acceptance and compliance with the agreed delivery date, the stated price and the agreed quantity. Please advise this office
immediately if you are unable to deliver by the agreed date. This PO is placed and subject to our terms and conditions. Please note all deliveries must be accompanied by a delivery
note detailing our Purchase order reference (s) our product code and quantity delivered, prior to delivery a ASN should be sent to our supply chain contact.</span></td>
        		</tr>
        		<tr>
        			<td colspan="12">
        				<table style="width: 100%; margin-top: 10px;">
        					<tr>
			        			<td align="left" class="footer">Printed : ${.now?datetime?string["EEE dd MMM yyyy HH:mm"]}</td>
			        			<td align="center" class="footer">VAT Reg. No.: ${record.cseg_bbs_brand.custrecord_bbs_brand_vat_number}</td>
			        			<td align="right" class="footer">Page <pagenumber/> of <totalpages/></td>
        					</tr>
        				</table>
        			</td>
        		</tr>
        	</table>
        </macro>
   </macrolist>
    
    <style type="text/css">
    	* {
			font-family: Arial, sans-serif;
		}
		table {
			font-size: 10pt;
			table-layout: fixed;
		}
        th {
            font-weight: bold;
            font-size: 10pt;
            vertical-align: middle;
            padding: 5px 6px 3px;
            color: #333333;
        }
        td {
            padding: 4px 6px;
        }
        td.bankdetails {
        	padding-left: 0px;
        	padding-right: 0px;
        	padding-top: 5px;
        	padding-bottom: 0px;
        	font-size: 8pt;
        }
        td.footer {
        	padding-left: 0px;
        	padding-right: 0px;
        	padding-top: 5px;
        	padding-bottom: 0px;
        	font-size: 10pt;
        }
		td p {
			align:left;
		}
		hr {
			width: 100%;
			margin-top: 20px;
			margin-bottom: 5px;
		}
</style>
</head>
<body header="nlheader" header-height="145pt" footer="nlfooter" footer-height="60pt" padding="0.5in 0.5in 0.5in 0.5in" size="A4">
    
    <table style="width: 100%; margin-bottom: 5px;">
    	<tr>
    		<td colspan="4" style="border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black;"><b>SUPPLIER</b></td>
      		<td colspan="4" style="margin-left: 10px; border-top: 1px solid black; border-left: 1px solid black; border-right: 1px solid black;"><b>DELIVER TO</b></td>
      	</tr>
      	<tr>
      		<td colspan="4" style="padding-left: 50px; border-left: 1px solid black; border-right: 1px solid black;">${record.billaddress}</td>
      		<td colspan="4" style="margin-left: 10px; padding-left:50px; border-left: 1px solid black; border-right: 1px solid black;">${record.shipaddress}</td>
      	</tr>
      	<tr>
        	<td colspan="4" style="padding-left: 50px; border-left: 1px solid black; border-right: 1px solid black;">&nsbp;</td>
            <td colspan="4" style="margin-left: 10px; padding-left:50px; border-left: 1px solid black; border-right: 1px solid black;">&nsbp;</td>
        </tr>
      	<tr>
     		<td colspan="4" style="padding-left: 50px; border-bottom: 1px solid black; border-left: 1px solid black; border-right: 1px solid black;">&nsbp;</td>
         	<td colspan="4" style="margin-left: 10px; padding-left:50px; border-bottom: 1px solid black; border-left: 1px solid black; border-right: 1px solid black;">&nsbp;</td>
       	</tr>
  	</table>
    
    <!-- ITEMS TABLE -->
    <table style="width: 100%;">
    	<#list record.item as item>
    		<#if item_index==0>
				<thead>
					<tr style="border-top: 1px solid black; border-bottom: 1px solid black;">
						<th align="left" colspan="2">Item</th>
						<th align="left" colspan="8">Product</th>
						<th align="left" colspan="10">Description</th>
						<th align="right" colspan="4">Quantity</th>
						<th align="left" colspan="4" style="padding-left: 20px;">UOM</th>
						<th align="right" colspan="4">Net Price</th>
						<th align="right" colspan="4">Value</th>
					</tr>
    			</thead>
    		</#if>
    			<tr>
    				<td align="left" colspan="2">${item_index +1}</td>
    				<td align="left" colspan="8">${item.item}</td>
    				<td align="left" colspan="10">${item.description}<br/><i>Delivery date to our facility : ${item.expectedreceiptdate}</i></td>
    				<td align="right" colspan="4">${item.quantity}</td>
    				<td align="left" colspan="4" style="padding-left: 20px;"><span style="color:#FF0000;">Each</span></td>
    				<td align="right" colspan="4">${item.rate?string["#,##0.00"]}</td>
    				<td align="right" colspan="4">${item.amount?string["#,##0.00"]}</td>
    			</tr>
    	</#list>
  	</table>
  	
  	<hr/><!-- Horizontal Line -->
   		<table style="width: 100%;">
        	<tr>
        		<td colspan="6">
        			<table style="width: 100%; border: 1px solid black;">
        				<tr>
        					<td colspan="2" style="padding-bottom: 20px;">Authorised by:</td>
        					<td colspan="4" style="padding-bottom: 20px;">____________________________</td>
        				</tr>
        				<tr>
        					<td colspan="2">Date:</td>
        					<td colspan="4">____________________________</td>
        				</tr>
        				<tr>
        					<td style="padding-bottom: 10px;">&nbsp;</td>
        					<td style="padding-bottom: 10px;">&nbsp;</td>
        				</tr>
        			</table>
        		</td>
        		<td colspan="6">
        			<table style="width: 100%; border: 1px solid black;">
        				<tr>
        					<td colspan="4" style="padding-bottom: 10px;"><b>Order Value</b></td>
			  				<td colspan="2" align="right" style="padding-bottom: 10px;">${record.subtotal}</td>
			 			</tr>
				        <tr>
						   	<td colspan="4" style="padding-bottom: 10px;"><b>Total VAT</b></td>
						 	<td colspan="2" align="right" style="padding-bottom: 10px;">${record.taxtotal}</td>
						</tr>
						<tr>
						   	<td colspan="4" style="padding-bottom: 10px;"><b>Order Total</b></td>
						 	<td colspan="2" align="right" style="padding-bottom: 10px;">${record.total}</td>
						</tr>
					</table>
        		</td>
        	</tr>
        </table>
    
</body>
</pdf>