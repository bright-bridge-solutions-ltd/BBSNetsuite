<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<head>
	<link name="Arial" type="font" subtype="truetype" src="${nsfont.Arial_Regular}" src-bold="${nsfont.Arial_Bold}" src-italic="${nsfont.Arial_Italic}" src-bolditalic="${nsfont.Arial_BoldItalic}" bytes="2" />
	<macrolist>
    	<macro id="nlheader">
      		<table style="width: 100%; font-size: 10pt;">
      			<tr>
      				<td colspan="4"><span style="font-size: 16pt; font-weight: bold;">Bill of Materials</span></td>
      				<td colspan="4" rowspan="5"><p align="center"><img src="${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_logo@url}" style="float: center; width:100px; height:50px;"/><br/><br/>${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_legal_name}<br/>${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_address_1}<br/>${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_address_2}, ${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_address_3}<br/>${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_city}, ${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_county}, ${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_postcode}<br/>Tel: ${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_telephone}<#if record.custbody_bbs_output_logo.custrecord_bbs_output_logo_fax?has_content> Fax: ${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_fax}</#if><br/>Email: ${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_sales_email}<br/>${record.custbody_bbs_output_logo.custrecord_bbs_output_logo_website}</p></td>
      			</tr>
      			<tr>
      				<td colspan="2" style="border-left: 1px solid black; border-top: 1px solid black;"><b>Order Date</b></td>
      				<td colspan="2" style="border-right: 1px solid black; border-top: 1px solid black;"><b>: ${record.trandate}</b></td>
      			</tr>
      			<tr>
      				<td colspan="2" style="border-left: 1px solid black;"><b>Order #</b></td>
      				<td colspan="2" style="border-right: 1px solid black;"><b>: ${record.tranid}</b></td>
      			</tr>
      			<tr>
	      			<td colspan="2" style="border-left: 1px solid black; border-bottom: 1px solid black;"><b>Customer</b></td>
	      			<td colspan="2" style="border-right: 1px solid black; border-bottom: 1px solid black;"><b>: ${record.entity}</b></td>
      			</tr>
      		</table>
        </macro>
        <macro id="nlfooter">
        	<table style="width: 100%;">
	           	<tr>
        			<td colspan="12" align="center"><barcode codetype="code128" showtext="true" value="${record.tranid}"/></td>
        		</tr>
        		<tr>
        			<td colspan="12">
        				<table style="width: 100%; margin-top: 10px;">
        					<tr>
			        			<td align="left" class="footer">Printed : ${.now?datetime?string["EEE dd MMM yyyy HH:mm"]}</td>
			        			<td align="right" class="footer">Page <pagenumber/> of <totalpages/></td>
        					</tr>
        				</table>
        			</td>
        		</tr>
        	</table>
        </macro>
   </macrolist>
    
    <style type="text/css">
    	* {
			font-family: Arial, sans-serif;
		}
		table {
			font-size: 10pt;
			table-layout: fixed;
		}
        th {
            font-weight: bold;
            font-size: 10pt;
            vertical-align: middle;
            padding: 5px 6px 3px;
            color: #333333;
        }
        td {
            padding: 4px 6px;
        }
        td.bankdetails {
        	padding-left: 0px;
        	padding-right: 0px;
        	padding-top: 5px;
        	padding-bottom: 0px;
        	font-size: 8pt;
        }
        td.footer {
        	padding-left: 0px;
        	padding-right: 0px;
        	padding-top: 5px;
        	padding-bottom: 0px;
        	font-size: 10pt;
        }
		td p {
			align:left;
		}
		hr {
			width: 100%;
			margin-top: 20px;
			margin-bottom: 5px;
		}
		span.tabletitle {
			font-size: 12pt;
			font-weight: bold;
		}
</style>
</head>
<body header="nlheader" header-height="150pt" footer="nlfooter" footer-height="50pt" padding="0.5in 0.5in 0.5in 0.5in" size="A4">
    
   	<!-- ITEMS TABLE -->
    <table style="width: 100%;">
    	<#list record.item as item>
    		<#if item_index==0>
				<thead>
					<tr>
	    				<th colspan="16"><span class="tabletitle">Items</span></th>
	    			</tr>
					<tr style="margin-top: 10px; border-top: 1px solid black; border-bottom: 1px solid black;">
						<th align="left" colspan="8">Product</th>
						<th align="left" colspan="10">Description</th>
						<th align="right" colspan="4">Quantity</th>
						<th align="left" colspan="4" style="padding-left: 40px;">UOM</th>
					</tr>
    			</thead>
    		</#if>
    			<tr>
    				<td align="left" colspan="8">${item.item}</td>
    				<td align="left" colspan="10">${item.description}</td>
    				<td align="right" colspan="4">${item.quantity}</td>
    				<td align="left" colspan="4" style="padding-left: 40px;">${item.units}</td>
    			</tr>
    	</#list>
    </table>
    
    <!-- MANUFACTURER ROUTING STEPS TABLE -->
    <#if record.custbody_bbs_manufactuer_routing_steps?has_content>
    	<table style="width: 100%;">
    		<#list record.custbody_bbs_manufactuer_routing_steps?eval as routingStep>
    			<#if routingStep_index == 0>
    				<thead>
	    				<tr>
	    					<th colspan="16"><span class="tabletitle">Manufacturer Routing Steps</span></th>
	    				</tr>
	    				<tr style="margin-top: 10px; border-top: 1px solid black; border-bottom: 1px solid black;">
							<th align="left" colspan="6">Operation<br/>Sequence</th>
							<th align="left" colspan="8">Operation<br/>Name</th>
							<th align="left" colspan="4">Run<br/>Rate</th>
						</tr>
    				</thead>
    			</#if>
    			<tr>
    				<td align="left" colspan="6">${routingStep.operationSequence}</td>
    				<td align="left" colspan="8">${routingStep.operationName}</td>
    				<td align="left" colspan="4">${routingStep.runRate}</td>
    			</tr>
    		</#list>
    	</table>   
    </#if>
    
</body>
</pdf>